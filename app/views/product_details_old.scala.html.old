
<div class="product-header" style="background-image: url('https://s3.amazonaws.com/sproutup-mvp-cdn/assets/{{product.productEAN}}.jpg')">
<div class="product-info">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <p class="product-title">{{product.productName}}</p>
        <p class="product-description">{{product.productDescription}}</p>
        <ul class="list-inline product-social-buttons">
            @if(product.urlHome != null){
            <li><a href="http://@product.urlHome" target="_blank"><i class="fa fa-home"></i></a>
            </li>
            }
            @if(product.urlFacebook != null){
            <li><a href="http://@product.urlFacebook" target="_blank"><i class="fa fa-facebook"></i></a>
            </li>
            }
            @if(product.urlTwitter != null){
            <li><a href="http://@product.urlTwitter" target="_blank"><i class="fa fa-twitter"></i></a>
            </li>
            }
        </ul>

        <div class="col-lg-12">
            @if(product.id == 1) {
                @defining(Application.getLocalUser(session())) { user =>
                    @if(user != null) {
                        <a id="feedback" data-toggle="modal" data-refresh="true" data-src="@routes.FeedbackManagement.fetchPopupQSurvey(product.id)" data-height=520 data-width=500 data-target="#feedbackModal" class="btn btn-lg btn-outline">Share my experience</a>
                    } else {
                        <a href="@routes.Application.login()" class="btn btn-lg btn-outline">Share my experience</a>
                    }
                }
            }

            <a data-toggle="modal" data-target="#uploadMediaModal" class="btn btn-lg btn-outline">Share my photos</a>
        </div>
    </div>
</div>
</div>

<div ng-view></div>

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-8" style="background-color:lavender;">
            <div class="row">
